@model IEnumerable<AgriEnergySolution.Models.Farmer>

@{
    ViewData["Title"] = "List of farmers";
}

<h1>Farmer Profiles</h1>

<p>
    <a asp-action="Create">Create New Farmer Profile</a> |
    <a asp-controller="EmployeeProfile" asp-action="Index">View Employees</a> |
    <a asp-controller="Products" asp-action="Index">View all Products</a> |
</p>



<table class="table">
    <thead>
        <tr>
            <th>
            @Html.DisplayNameFor(model => model.Name)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>

      

@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>  |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>  |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="FarmerProducts" asp-route-id="@item.Id">View Products</a> |
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </td>
        </tr>
            

}
    </tbody>
</table>
